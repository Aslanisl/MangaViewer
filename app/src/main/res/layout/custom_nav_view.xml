<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_nav_bar_height"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/searchImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_item_image_height_selected"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_binocular"
            tools:tint="@color/bottomSelectColor" />

        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_search"
            android:textColor="@color/colorTitleText"
            android:textSize="@dimen/font_normal"
            tools:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/genre"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/genreImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_item_image_height_selected"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_book"
            tools:tint="@color/bottomUnselectColor" />

        <TextView
            android:id="@+id/genreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_genres"
            android:textColor="@color/colorTitleText"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/historyImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_item_image_height_selected"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_bookmark"
            tools:tint="@color/bottomUnselectColor" />

        <TextView
            android:id="@+id/historyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_history"
            android:textColor="@color/colorTitleText"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/settingsImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_item_image_height_selected"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_settings"
            tools:tint="@color/bottomUnselectColor" />

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:textColor="@color/colorTitleText"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</LinearLayout>