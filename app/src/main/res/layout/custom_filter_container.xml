<ru.mail.aslanisl.mangareader.features.base.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mangaFilters"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal">

    <ru.mail.aslanisl.mangareader.features.genre.FilterView
        android:id="@+id/filterDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:filter="date" />

    <ru.mail.aslanisl.mangareader.features.genre.FilterView
        android:id="@+id/filterFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:filter="favorite" />

    <ru.mail.aslanisl.mangareader.features.genre.FilterView
        android:id="@+id/filterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:filter="name" />

    <ru.mail.aslanisl.mangareader.features.genre.FilterView
        android:id="@+id/filterChapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:filter="chapter" />

</ru.mail.aslanisl.mangareader.features.base.FlowLayout>